<script>
    document.addEventListener('DOMContentLoaded',()=>{
        const URL=window.location.origin
        updateCart()
        const btnSubmit=document.querySelector('.submit')
        let nameEl=document.querySelector('input[name="name"]')
        let emailEl=document.querySelector('input[name="email"]')
        let passwordEl =document.querySelector('input[name="password"]')
        let confirmPasswordEl = document.querySelector('input[name="confirmPassword"]')
        let isValidEmail=false
        let isValidPassword=false

        if(emailEl){
            emailEl.addEventListener('blur',(e)=>{
                if(!validateEmail(e.target.value)){
                    document.querySelector('#err-email').textContent='Email không hợp lệ  '
                }
                else{
                    isValidEmail=true
                    document.querySelector('#err-email').textContent=''
                }
            })
        }

        if(confirmPasswordEl){
            confirmPasswordEl.addEventListener('input',(e)=>{
                let password=passwordEl.value
                if(password!==e.target.value){
                    document.querySelector('#err-password').textContent='Mật khẩu xác nhận không chính xác '
                }else{
                    isValidPassword=true
                    document.querySelector('#err-password').textContent=''
                }
            })
        }

        if(btnSubmit){
            btnSubmit.addEventListener('click',(e)=>{
                e.preventDefault()
                console.log('vo day')
                if(!isValidEmail||!isValidPassword){
                    Toastify({
                        text: "Mời bạn nhập các thông tin cần thiết",
                        className: "info",
                        offset:{
                            x:'20px',
                            y:'200px',
                        },
                        style: {
                            background: "linear-gradient(to right, #00b09b, #96c93d)",
                            borderRadius:"10px",
                            height:"60px"
                        }
                        }).showToast();
                    return
                }
                let name=nameEl.value
                let email=emailEl.value
                let password=passwordEl.value

                fetch(`${URL}/auth/register`,
                {
                    headers: {
                    'Accept': 'application/json',
                    'Content-Type': 'application/json'
                    },
                    method: "POST",
                    body: JSON.stringify({name,email,password})
                })
                .then(res=>res.json())
                .then(res=>{
                    console.log(res)
                    if(res.success){
                        Toastify({
                        text: "Tạo tài khoản thành công",
                        className: "info",
                        offset:{
                            x:'20px',
                            y:'200px',
                        },
                        style: {
                            background: "linear-gradient(to right, #00b09b, #96c93d)",
                            borderRadius:"10px",
                            height:"60px"
                        }
                        }).showToast();
                        setTimeout(()=>{
                            window.location.href=window.location.origin+'/auth/login'
                        },1200)
                    }
                    else{
                        document.querySelector('#err-email').textContent='Email này đã được sử dụng ! '
                    }
                })
            })
        }



        function validateEmail(mail) 
        {
